# Load required library
library(ggplot2)

# Define prioritization criteria and their weightings
criteria <- c("Business Value", "Strategic Alignment", "Technical Feasibility", 
              "Data Readiness", "Cost & Risk", "Time-to-Value")
weights <- c(0.25, 0.20, 0.15, 0.15, 0.15, 0.10)

# Sample initiatives with raw scores (out of 5)
initiatives <- data.frame(
  Initiative = c("AI-driven Demand Forecasting", "Automated Customer Support", "AI-powered Personalization"),
  Business_Value = c(5, 4, 4),
  Strategic_Alignment = c(4, 3, 5),
  Technical_Feasibility = c(3, 5, 4),
  Data_Readiness = c(4, 5, 3),
  Cost_Risk = c(3, 4, 4),
  Time_to_Value = c(4, 3, 5)
)

# Calculate weighted scores
initiatives$Total_Score <- rowSums(initiatives[, -1] * weights)

# Sort initiatives by highest priority
initiatives <- initiatives[order(-initiatives$Total_Score), ]

# Display results
print(initiatives)

# Visualization: Heatmap of Prioritization
long_data <- reshape2::melt(initiatives, id.vars = "Initiative")
ggplot(long_data, aes(x = Initiative, y = variable, fill = value)) +
  geom_tile(color = "white") +
  scale_fill_gradient(low = "lightblue", high = "darkblue") +
  theme_minimal() +
  labs(title = "AI Initiative Prioritization Heatmap", x = "Initiative", y = "Criteria")
